<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
		<definition name="layouts" template="/template/layouts.jsp">
		
			<put-attribute name="top" value="/template/Top.jsp"/>
			<put-attribute name="body" value=""/>
			<put-attribute name="footer" value="/template/Footer.jsp"/>
			
		</definition>
		
		<definition name="/member/*.tile" extends="layouts">
			
			<put-attribute name="body" value="/member/{1}.jsp"/>
			
		</definition>
		
		<definition name="*/*.tile" extends="layouts">
			<put-attribute name="body" value="/member/{1}/{2}.jsp"/>
		</definition>
		<definition name="*/*/*.tile" extends="layouts">
			<put-attribute name="body" value="/member/{1}/{2}/{3}.jsp"/>
		</definition>
</tiles-definitions>